Sample Input 1 :
6
0 1 2 2 1 0
Sample Output 1 :
0 0 1 1 2 2

Sample Input 2:
7
0 1 2 1 2 1 2
Sample Output 2 :
0 1 1 1 2 2 2
---------------------------------------------

#include <bits/stdc++.h> 
void sort012(int *arr, int n)
{
   int low = 0, mid = 0, high = n-1;
    
    while(mid <= high) {
        if(arr[mid] == 0) {
            arr[mid] = arr[low];
            arr[low] = 0;
            low++, mid++;
        }
        else if(arr[mid] == 1)
            mid++;
        else if(arr[mid] == 2) {           
            arr[mid] = arr[high];
            arr[high] = 2;
            high--;
        }
    }
}
